---
import Divider from '@/components/ui/Divider.astro'
import type { FooterLink } from '@/interfaces/footerLink'
import { getI18N } from '@/languages/index.ts'
import { footerLinks } from '@/libs/consts'

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
const links: FooterLink[] = footerLinks()
---

<footer class='flex w-full items-center justify-center border-t border-accent/10 bg-back/50 backdrop-blur-md'>
	<div class='flex w-full max-w-6xl flex-col px-4 py-12 sm:px-6 md:w-11/12 lg:w-10/12 lg:px-8'>
		<Divider />

		<div
			class='mt-8 flex w-full flex-col-reverse items-center gap-8 md:justify-between md:gap-4 lg:flex-row lg:items-start'
		>
			<a
				rel='noopener noreferrer'
				href='https://fotoestudioelchevere.com/'
				class='order-1 flex max-w-32 items-center justify-center transition-transform duration-300 hover:scale-105 lg:order-none'
			>
				<img
					src='https://www.fotoestudioelchevere.com/logo-no-name.png'
					srcset='https://www.fotoestudioelchevere.com/logo-no-name.png'
					alt='Logo Foto Estudio El Chévere'
					loading='lazy'
					decoding='async'
					class='filter drop-shadow-lg'
				/>
			</a>

			<p class='max-w-lg text-pretty text-center text-sm leading-relaxed text-secondary lg:text-start'>
				&#169; 2025 Foto Estudio El Chévere. <br />
				{i18n.FOOTER_TXT_1}
				<a
					rel='noopener noreferrer'
					href='https://rikirilis.com/portfolio'
					target='_blank'
					class='font-bold text-accent underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'
					>RikiRilis</a
				>
				(Rikelvi Capellán García) {i18n.FOOTER_TXT_2}
				<a
					rel='noopener noreferrer'
					href='https://astro.build'
					target='_blank'
					class='font-bold text-accent underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'
					>Astro</a
				>, <a
					rel='noopener noreferrer'
					href='https://tailwindcss.com'
					target='_blank'
					class='font-bold text-accent underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'
					>Tailwind CSS</a
				>
				{i18n.FOOTER_TXT_3}
				<a
					rel='noopener noreferrer'
					href='https://vercel.com'
					target='_blank'
					class='font-bold text-accent underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'
					>Vercel</a
				>.
			</p>

			<ul class='flex flex-row items-center gap-x-4'>
				{
					links.map((link) => (
						<li>
							<a
								target='_blank'
								href={link.href}
								rel='noopener noreferrer'
								aria-label={link.description}
								class='group inline-flex size-10 items-center justify-center rounded-xl border border-accent/10 bg-glass text-secondary backdrop-blur-sm transition-all duration-300 hover:scale-110 hover:border-accent/30 hover:bg-accent/10 hover:text-accent active:scale-95'
							>
								<link.icon class='size-5 transition-transform duration-300 group-hover:scale-110' />
							</a>
						</li>
					))
				}
			</ul>
		</div>

		<Divider />

		<div class='mt-6 w-full'>
			<ul class='flex w-full flex-row items-center justify-center gap-x-4'>
				<li>
					<a
						href='https://fotoestudioelchevere.com/privacy/'
						rel='noopener noreferrer'
						target='_blank'
						class='text-sm text-secondary/70 underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'
						>{i18n.PRIVACY}</a
					>
				</li>
				<li class='pointer-events-auto select-none text-sm text-secondary/30'>•</li>
				<li>
					<a
						href='https://fotoestudioelchevere.com/terms/'
						rel='noopener noreferrer'
						target='_blank'
						class='text-sm text-secondary/70 underline-offset-4 transition-all duration-300 hover:text-primary hover:underline'>{i18n.TERMS}</a
					>
				</li>
			</ul>
		</div>
	</div>
</footer>
