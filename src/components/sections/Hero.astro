---
import DateCheck from '@/icons/DateCheck.astro'
import Pin from '@/icons/Pin.astro'
import { gMapLocation } from '@/libs/consts'
import { getI18N } from '@/locales/index'

const currentLocale = Astro.currentLocale
const i18n = getI18N({ currentLocale })

const parallax = `bg-parallax-${new Date().getDay() + 1}`
---

<div
	class={`parallax absolute left-0 top-0 h-screen w-full translate-y-0 ${parallax} bg-cover bg-fixed bg-center`}
>
	<div class='absolute inset-0 bg-gradient-to-b from-back/40 via-back/60 to-back/90'></div>
	<div class='absolute inset-0 bg-gradient-to-r from-back/30 via-transparent to-back/30'></div>
</div>

<div
	class='relative z-10 flex min-h-screen w-full items-center justify-center px-4 py-20 pt-20 sm:px-6 sm:pt-24 lg:px-8 lg:pt-28'
>
	<div class='flex w-full max-w-5xl flex-col gap-6 md:w-11/12 lg:w-9/12'>
		<a
			href='https://fotoestudioelchevere.com/'
			class='slide-in-from-top-2 animate-in fade-in group mb-2 flex max-w-sm items-center transition-transform duration-300 hover:scale-105 md:max-w-md'
		>
			<img
				src='https://www.fotoestudioelchevere.com/logo-hero.png'
				srcset='https://www.fotoestudioelchevere.com/logo-hero.png'
				width='1821'
				height='773'
				loading='lazy'
				alt='Foto Estudio El ChÃ©vere Hero Logo'
				class='drop-shadow-2xl filter'
			/>
		</a>

		<div class='space-y-4'>
			<p
				class='slide-in-from-top-2 animate-in fade-in max-w-3xl text-pretty text-xl font-medium leading-relaxed text-primary drop-shadow-lg md:text-2xl lg:text-3xl'
			>
				{i18n.HERO_TEXT_1}
				<br />
				<span class='bg-gradient-to-r from-accent via-main to-accent bg-clip-text text-transparent'>
					{i18n.HERO_TEXT_2}
				</span>
			</p>

			<div class='flex max-w-xl flex-col gap-3 md:flex-row md:items-center md:gap-4'>
				<!-- <a
					href='/schedule'
					class='group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-transparent bg-gradient-to-r from-main to-accent px-6 py-3 text-lg font-bold text-primary shadow-lg shadow-main/30 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-main/50 active:scale-95'
				>
					<span
						class='absolute inset-0 bg-gradient-to-r from-accent to-main opacity-0 transition-opacity duration-300 group-hover:opacity-100'
					></span>
					<DateCheck class='relative z-10' />
					<span class='relative z-10'>{i18n.HERO_BUTTON_TEXT_1}</span>
				</a> -->

				<a
					target='_blank'
					href={gMapLocation}
					class='slide-in-from-top-2 animate-in fade-in group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-accent/30 bg-glass px-6 py-3 text-lg font-bold text-primary backdrop-blur-md transition-all duration-300 hover:border-accent/60 hover:bg-accent/10 hover:shadow-lg hover:shadow-accent/20 active:scale-95'
				>
					<span
						class='absolute inset-0 bg-gradient-to-r from-accent/0 via-accent/10 to-accent/0 opacity-0 transition-opacity duration-300 group-hover:opacity-100'
					></span>
					<Pin class='relative z-10 transition-transform duration-300 group-hover:scale-110' />
					<span class='relative z-10'>{i18n.HERO_BUTTON_TEXT_2}</span>
				</a>
			</div>
		</div>
	</div>

	<!-- Floating particles effect -->
	<div class='pointer-events-none absolute inset-0 overflow-hidden'>
		<div
			class='absolute left-1/4 top-1/4 h-2 w-2 animate-float rounded-full bg-accent/30'
			style='animation-delay: 0s;'
		>
		</div>
		<div
			class='absolute left-3/4 top-1/3 h-3 w-3 animate-float rounded-full bg-main/20'
			style='animation-delay: 2s;'
		>
		</div>
		<div
			class='absolute left-1/2 top-2/3 h-2 w-2 animate-float rounded-full bg-accent/20'
			style='animation-delay: 4s;'
		>
		</div>
	</div>

	<!-- Scroll down arrow -->
	<a
		href='#statistics'
		class='animate-fade-in group absolute bottom-6 flex flex-col items-center justify-center gap-1 opacity-0'
		style='animation-delay: 1s; animation-fill-mode: forwards;'
		aria-label={i18n.EXPLORE}
	>
		<span
			class='text-[10px] font-bold uppercase tracking-[0.3em] text-primary/30 transition-colors duration-500 group-hover:text-accent/60'
		>
			{i18n.EXPLORE}
		</span>
		<div class='relative flex h-12 w-8 items-center justify-center'>
			<div
				class='animate-line-scroll absolute h-8 w-[2px] bg-gradient-to-b from-transparent via-accent/50 to-accent'
			>
			</div>

			<svg
				class='animate-bounce-subtle absolute bottom-0 size-5 text-accent'
				xmlns='http://www.w3.org/2000/svg'
				fill='none'
				viewBox='0 0 24 24'
				stroke='currentColor'
			>
				<path
					stroke-linecap='round'
					stroke-linejoin='round'
					stroke-width='2.5'
					d='M19 13l-7 7m0 0l-7-7'></path>
			</svg>
		</div>
	</a>
</div>

<style>
	@keyframes line-scroll {
		0% {
			height: 0;
			top: 0;
			opacity: 0;
		}
		30% {
			height: 20px;
			top: 0;
			opacity: 1;
		}
		100% {
			height: 0;
			top: 32px;
			opacity: 0;
		}
	}

	.animate-line-scroll {
		animation: line-scroll 2s cubic-bezier(0.65, 0, 0.35, 1) infinite;
	}

	@keyframes bounce-subtle {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(5px);
		}
	}

	.animate-bounce-subtle {
		animation: bounce-subtle 2s ease-in-out infinite;
	}

	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fade-in 1s ease-out forwards;
	}
</style>

<script>
	import { $ } from '@/libs/dom-selector.ts'

	document.addEventListener('astro:page-load', () => {
		window.addEventListener('scroll', () => {
			const parallax = $('.parallax')
			const offset = window.scrollY
			if (parallax) parallax.style.transform = `translateY(${offset * 0.5}px)`
		})
	})
</script>
