---
import DateCheck from '@/icons/DateCheck.astro'
import Pin from '@/icons/Pin.astro'
import { getI18N } from '@/languages/index'
import { gMapLocation } from '@/libs/consts'

const currentLocale = Astro.currentLocale
const i18n = getI18N({ currentLocale })

const parallax = `bg-parallax-${new Date().getDay() + 1}`
---

<div
	class={`parallax absolute left-0 top-0 h-screen w-full translate-y-0 ${parallax} bg-cover bg-fixed bg-center`}
>
	<div class='absolute inset-0 bg-gradient-to-b from-back/40 via-back/60 to-back/90'></div>
	<div class='absolute inset-0 bg-gradient-to-r from-back/30 via-transparent to-back/30'></div>
</div>

<div
	class='relative z-10 flex min-h-screen w-full items-center justify-center px-4 py-20 pt-20 sm:px-6 sm:pt-24 lg:px-8 lg:pt-28'
>
	<div class='flex w-full max-w-5xl flex-col gap-6 md:w-11/12 lg:w-9/12'>
		<a 
			href='https://fotoestudioelchevere.com/' 
			class='group mb-2 flex max-w-sm items-center transition-transform duration-300 hover:scale-105 md:max-w-md'
		>
			<img
				src='https://www.fotoestudioelchevere.com/logo-hero.png'
				srcset='https://www.fotoestudioelchevere.com/logo-hero.png'
				width='1821'
				height='773'
				loading='lazy'
				alt='Foto Estudio El ChÃ©vere Hero Logo'
				class='drop-shadow-2xl filter'
			/>
		</a>
		
		<div class='fade-up-anim space-y-4'>
			<p class='max-w-3xl text-pretty text-xl font-medium leading-relaxed text-primary drop-shadow-lg md:text-2xl lg:text-3xl'>
				{i18n.HERO_TEXT_1}
				<br />
				<span class='bg-gradient-to-r from-accent via-main to-accent bg-clip-text text-transparent'>
					{i18n.HERO_TEXT_2}
				</span>
			</p>

			<div class='flex max-w-xl flex-col gap-3 md:flex-row md:items-center md:gap-4'>
				<!-- <a
					href='/schedule'
					class='group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-transparent bg-gradient-to-r from-main to-accent px-6 py-3 text-lg font-bold text-primary shadow-lg shadow-main/30 transition-all duration-300 hover:scale-105 hover:shadow-xl hover:shadow-main/50 active:scale-95'
				>
					<span
						class='absolute inset-0 bg-gradient-to-r from-accent to-main opacity-0 transition-opacity duration-300 group-hover:opacity-100'
					></span>
					<DateCheck class='relative z-10' />
					<span class='relative z-10'>{i18n.HERO_BUTTON_TEXT_1}</span>
				</a> -->

				<a
					target='_blank'
					href={gMapLocation}
					class='group relative mt-4 flex w-full cursor-pointer flex-row items-center justify-center gap-2 overflow-hidden rounded-xl border border-accent/30 bg-glass px-6 py-3 text-lg font-bold text-primary backdrop-blur-md transition-all duration-300 hover:border-accent/60 hover:bg-accent/10 hover:shadow-lg hover:shadow-accent/20 active:scale-95'
				>
					<span
						class='absolute inset-0 bg-gradient-to-r from-accent/0 via-accent/10 to-accent/0 opacity-0 transition-opacity duration-300 group-hover:opacity-100'
					></span>
					<Pin class='relative z-10 transition-transform duration-300 group-hover:scale-110' />
					<span class='relative z-10'>{i18n.HERO_BUTTON_TEXT_2}</span>
				</a>
			</div>
		</div>
	</div>
	
	<!-- Floating particles effect -->
	<div class='pointer-events-none absolute inset-0 overflow-hidden'>
		<div class='absolute left-1/4 top-1/4 h-2 w-2 animate-float rounded-full bg-accent/30' style='animation-delay: 0s;'></div>
		<div class='absolute left-3/4 top-1/3 h-3 w-3 animate-float rounded-full bg-main/20' style='animation-delay: 2s;'></div>
		<div class='absolute left-1/2 top-2/3 h-2 w-2 animate-float rounded-full bg-accent/20' style='animation-delay: 4s;'></div>
	</div>
</div>

<script>
	import { $ } from '@/libs/dom-selector.ts'

	document.addEventListener('astro:page-load', () => {
		window.addEventListener('scroll', () => {
			const parallax = $('.parallax')
			const offset = window.scrollY
			if (parallax) parallax.style.transform = `translateY(${offset * 0.5}px)`
		})
	})
</script>
