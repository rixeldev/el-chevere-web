---
import WhatsApp from '@/icons/WhatsApp.astro'
import { businessWhatsApp } from '@/libs/consts'
---

<a
	href={businessWhatsApp}
	target='_blank'
	rel='noopener noreferrer'
	class='group fixed bottom-6 right-4 z-30 flex size-14 cursor-pointer items-center justify-center rounded-2xl border border-success/30 bg-gradient-to-br from-success/20 to-success/10 text-success backdrop-blur-md shadow-lg shadow-success/20 transition-all duration-300 hover:scale-110 hover:border-success/50 hover:bg-success/30 hover:shadow-xl hover:shadow-success/30 active:scale-95'
	aria-label='Contact via WhatsApp'
>
	<WhatsApp class='size-7 transition-transform duration-300 group-hover:scale-110' />
